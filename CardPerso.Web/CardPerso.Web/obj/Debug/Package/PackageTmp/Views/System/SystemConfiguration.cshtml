@{
    ViewBag.Title = "SystemConfiguration";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Scripts.Render("~/bundles/configureSystem")
<aside class="content-wrapper sidebarLeft">
    <div class="content container-fluid sidebarRight animated fadeInUp">
        <div class="row">

            <div class="col-sm-12">
                <div class="panel panel-white">
                    <div class="panel-body content-title-container">
                        <div class="right">
                            <ol class="breadcrumb breadcrumb-theme breadcrumb-sm breadcrumb-blue">
                                <li><a href="~/Home/Dashboard">Dashboard</a></li>
                                <li><a>System Configuration</a></li>
                                <li class="active"><a>Configure System</a></li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>

        </div>

        <div class="row">
            <div class="col-sm-12">
                <div class="panel panel-white">
                    <div class="panel-heading">
                        <h3 class="panel-title">Configure System</h3>
                    </div>
                    <div class="panel-body">
                        <div id="form-validation" class="form-horizontal" role="form">
                            <div class="panel-heading">
                                <h4 class="panel-title"><i class="ion-ios7-monitor-outline"></i> General Configuration</h4>
                                <hr />
                            </div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label">Application Name</label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" placeholder="Enter Application Name" id="applicationName" autofocus="" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label">Application URL</label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" placeholder="Enter Application URL" id="applicationURL" readonly />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label">Bank Name</label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" placeholder="Enter Bank Name" id="bankName" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label">Application Log File Path</label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" disabled="disabled" id="logFilePath" />
                                </div>
                            </div>
                            <div class="panel-heading">
                                <h4 class="panel-title"><i class="ion-android-storage"></i> Database Configuration</h4>
                                <hr />
                            </div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label">Database Host</label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" placeholder="Enter Database Host" id="oracleDBHost" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label">Database Port</label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" placeholder="Enter Database Post" id="oracleDBPort" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label">Database Service Name</label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" placeholder="Enter Database Service Name" id="oracleDBServiceName" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label">Database User</label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" placeholder="Enter Database User" id="oracleDBUserId" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label">Database Password</label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" placeholder="Enter Database Password" id="oracleDBPassword" />
                                </div>
                            </div>
                            <div class="panel-heading">
                                <h4 class="panel-title"><i class="ion-email"></i> E-Mail Configuration</h4>
                                <hr />
                            </div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label">SMTP Server</label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" placeholder="Enter SMTP Server" id="smtpServer" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label">SMTP Port</label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" placeholder="Enter SMTP Port" id="smtpPort" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label">SMTP Username</label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" placeholder="Enter SMTP Username" id="smtpUsername" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label">SMTP Password</label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" placeholder="Enter SMTP Password" id="smtpPassword" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label">From E-Mail Address</label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" placeholder="Enter From Email Address" id="fromEmailAddress" />
                                </div>
                            </div>
                            <div class="panel-heading">
                                <h4 class="panel-title"><i class="ion-wrench"></i> Active Directory (AD) Configuration</h4>
                                <hr />
                            </div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label">Uses Active Directory</label>
                                <div class="col-sm-9">
                                    <input type="checkbox" style="height:23px" id="usesActiveDirectory" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label">AD Server</label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" placeholder="Enter AD Server" id="adServer" required />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label">AD Container</label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" placeholder="Enter AD Container" id="adContainer" required />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label">AD Username</label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" placeholder="Enter AD Username" id="adUsername" required />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label">AD Password</label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" placeholder="Enter AD Password" id="adPassword" required />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label">AD Server2</label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" placeholder="Enter AD Server2" id="adServer2" required />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label">AD Container2</label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" placeholder="Enter AD Container2" id="adContainer2" required />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label">AD Username2</label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" placeholder="Enter AD Username2" id="adUsername2" required />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label">AD Password2</label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" placeholder="Enter AD Password2" id="adPassword2" required />
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-sm-offset-3 col-sm-9">
                                    <button type="submit" id="addBtn" class="btn btn-blue" style="float:right;" onclick="configureSystem()"><i class="fa fa-cog"></i> Configure</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</aside>






