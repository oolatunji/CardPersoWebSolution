@{
    ViewBag.Title = "Approval Configuration";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Scripts.Render("~/bundles/approvalconfiguration")
<aside class="content-wrapper sidebarLeft">
    <div class="content container-fluid sidebarRight animated fadeInUp">
        <div class="row">

            <div class="col-sm-12">
                <div class="panel panel-white">
                    <div class="panel-body content-title-container">
                        <div class="right">
                            <ol class="breadcrumb breadcrumb-theme breadcrumb-sm breadcrumb-blue">
                                <li><a href="~/Home/Dashboard">Dashboard</a></li>
                                <li><a>Approval Management</a></li>
                                <li class="active"><a>Approval Configuration</a></li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>

        </div>

        <div class="row">
            <div class="col-sm-12">
                <div class="panel panel-white">
                    <div class="panel-heading">
                        <h3 class="panel-title">Approval Configuration</h3>
                    </div>
                    <div class="panel-body">
                        <div id="form-validation" class="form-horizontal" role="form">
                            <div class="col-md-12">
                                <div class="col-sm-offset-2 panel panel-default">
                                    <div class="panel-heading">
                                        <h3 class="panel-title" style="font-family:Arial;color:black;font-size:13px;">Configure for approval</h3>
                                    </div>
                                    <div class="panel-body" id="dynamicfunctions">
                                        
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-sm-offset-2 col-sm-10">
                                    <button type="submit" id="addBtn" class="btn btn-blue" style="float:right;" onclick="configure()"><i class="fa fa-cog"></i> Configure</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</aside>
